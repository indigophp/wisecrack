{% extends 'admin/layout.twig' %}

{% block title %}{% trans 'New wisecrack' %}{% endblock %}

{% block content %}

<h2>{% trans 'New wisecrack' %} <small>{% trans 'Paste a new wisecrack' %}</small></h2>

{% include 'form.twig' with { 'action': 'create' } %}

{% endblock %}

{% block documentready %}
	IndigoAdmin.addProxyButton('{% trans 'Save' %}', 'save', '#form-button-save');
{% endblock %}

{% if val.error_message() %}
	{% block error_flash %}
		<ul>
			{% for item in val.error_message() %}
				<li>{{ item }}</li>
			{% endfor %}
		</ul>
	{% endblock %}
{% endif %}
